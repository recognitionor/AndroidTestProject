<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nhnace.imasdktest.AdlibVideoView
        android:id="@+id/video_test_view"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/test_load_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testLoad" />

        <Button
            android:id="@+id/test_load2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testLoad2" />

        <Button
            android:id="@+id/test_load3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testLoad3" />

    </LinearLayout>

</LinearLayout>